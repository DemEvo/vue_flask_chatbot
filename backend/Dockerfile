# Используем официальный образ Python
FROM python:3.10-slim

# Устанавливаем рабочую директорию внутри контейнера
WORKDIR /app

# Копируем файл с зависимостями
COPY requirements.txt .

# Устанавливаем зависимости
RUN pip install --no-cache-dir -r requirements.txt

# Копируем все остальные файлы проекта в рабочую директорию
COPY . .

# Указываем команду, которая будет запускаться при старте контейнера
# gunicorn - это более надежный сервер для продакшена, чем встроенный в Flask
# Установим его и добавим в requirements.txt
CMD ["gunicorn", "--bind", "0.0.0.0:5000", "app:app"]